            <%- include("../components/menyy.ejs")%>
            <br>
            
            <div class="logo-name">
                UUDISED
            </div>
            <br>
            <div class="row">
                
                <% uudised.forEach((uudis, index) => { %>
                    <div class="col-12 col-sm-6 col-lg-4">
                        <img src="<%= uudis.uudisepiltUrl %>" width="150px" height="150">
                        <h3><%= uudis.pealkiri %></h3>
                        <p><%= uudis.kokkuvote %></p>
                        <a href="<%= '/uudis/' + index %>">Loe edasi</a>
                    </div>
                <% }) %>
                
            </div>
                   
            
 
        </div>
    </div>

    
